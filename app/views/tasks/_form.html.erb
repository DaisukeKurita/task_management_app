<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_eeplanation">
      <h2><%= @task.errors.count %><%= t('view.error') %> <%= t('view.prohibited this task from being saved') %></h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_detail">
    <%= form.label :task_detail %>
    <%= form.text_area :task_detail %>
  </div>
  <div class="expired_at">
    <%= form.label :expired_at %>
    <%= form.datetime_field :expired_at %>
  </div>
  <div class="status">
    <%= form.select :status, [[t('view.Not started yet'), 'Not started yet'], [t('view.Under start'), 'Under start'], [t('view.Completion'), 'Completion'] ] %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to t('view.Return to task list screen'), tasks_path %>
